import { useState } from 'react';
import { Plus, Minus } from 'lucide-react';

const faqData = [
  {
    id: 1,
    question: "What is Lorem Ipsum?",
    answer: "Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s."
  },
  {
    id: 2,
    question: "Where does it come from?",
    answer: "Contrary to popular belief, Lorem Ipsum is not simply random text. It has roots in a piece of classical Latin literature from 45 BC."
  },
  {
    id: 3,
    question: "Why do we use it?",
    answer: "It is a long established fact that a reader will be distracted by the readable content of a page when looking at its layout."
  },
  {
    id: 4,
    question: "When should we use Lorem Ipsum?",
    answer: "Lorem Ipsum is simply dummy text used when you need to fill space without using meaningful content during the design phase."
  }
];

export default function FAQ() {
  const [openItems, setOpenItems] = useState(new Set());

  const toggleItem = (id) => {
    setOpenItems(prev => {
      const newSet = new Set(prev);
      if (newSet.has(id)) {
        newSet.delete(id);
      } else {
        newSet.add(id);
      }
      return newSet;
    });
  };

  return (
    <div className="max-w-4xl mx-auto">
      <div className="grid md:grid-cols-2 gap-6">
        {faqData.map(({ id, question, answer }) => (
          <div 
            key={id}
            className="bg-gray-50 rounded-lg p-6"
          >
            <button
              onClick={() => toggleItem(id)}
              className="w-full flex justify-between items-center gap-4 text-left"
            >
              <h3 className="font-medium text-gray-900">{question}</h3>
              {openItems.has(id) ? (
                <Minus className="h-5 w-5 flex-shrink-0 text-gray-900" />
              ) : (
                <Plus className="h-5 w-5 flex-shrink-0 text-gray-900" />
              )}
            </button>
            
            {openItems.has(id) && (
              <p className="mt-4 text-gray-700 leading-relaxed">
                {answer}
              </p>
            )}
          </div>
        ))}
      </div>
    </div>
  );
}