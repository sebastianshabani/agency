<section class="border-b border-white/20 bg-accent-500">
  <div
    class="mx-auto max-w-7xl border-white/20 border-x"
    x-data="{ init() {
            new Splide(this.$refs.splide, {
                perPage: 3.5, // Show 3 full slides and 1 half slide
                perMove: 1, // Move one slide at a time
                gap: '0rem', // No gap between slides
                focus: 'center', // Center the active slide
                breakpoints: {
                    640: {
                        perPage: 1, // Show 1 slide on mobile
                    },
                },
            }).mount();
        },
    }"
  >
    <section
      class="splide is-initialized splide--slide splide--ltr splide--draggable is-active"
      aria-label="Splide/Alpine.js"
      x-ref="splide"
      id="splide01"
      aria-roledescription="carousel"
    >
      <div class="splide__arrows splide__arrows--ltr items-center">
        <button
          class="splide__arrow splide__arrow--prev"
          type="button"
          aria-label="Previous slide"
          aria-controls="splide01-track"
        >
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 40 40" width="40" height="40" focusable="false">
            <path d="m15.5 0.932-4.3 4.38 14.5 14.6-14.5 14.5 4.3 4.4 14.6-14.6 4.4-4.3-4.4-4.4-14.6-14.6z" />
          </svg>
        </button>
        <button
          class="splide__arrow splide__arrow--next"
          type="button"
          aria-label="Next slide"
          aria-controls="splide01-track"
        >
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 40 40" width="40" height="40" focusable="false">
            <path d="m15.5 0.932-4.3 4.38 14.5 14.6-14.5 14.5 4.3 4.4 14.6-14.6 4.4-4.3-4.4-4.4-14.6-14.6z" />
          </svg>
        </button>
      </div>
      <div
        class="h-full splide__track splide__track--slide splide__track--ltr splide__track--draggable"
        id="splide01-track"
        aria-live="polite"
        aria-atomic="true"
        aria-busy="false"
      >
        <ul class="splide__list" id="splide01-list" role="presentation">
          <!-- Slide 1 -->
          <li class="splide__slide">
            <div class="max-w-md overflow-hidden group relative h-[400px]">
              <!-- Image Section -->
              <div class="h-full w-full transition-transform duration-300 group-hover:scale-90">
                <img
                  src="/work/1.png"
                  alt="Social Media Ads"
                  class="w-full h-full object-cover"
                />
              </div>
              <!-- Text Section -->
              <div class="absolute inset-0 bg-black/80 transition-opacity duration-300 opacity-0 group-hover:opacity-100">
                <!-- Always Visible Title -->
                <div class="p-6 text-center">
                  <h2 class="text-2xl font-display text-white">Social Media Ads</h2>
                </div>
                <!-- Hidden Description -->
                <div class="p-6 mt-4">
                  <p class="text-gray-300">
                    Create and manage high-performing social media ad campaigns across platforms like Facebook, Instagram, and LinkedIn.
                  </p>
                </div>
              </div>
            </div>
          </li>

          <!-- Slide 2 -->
          <li class="splide__slide">
            <div class="max-w-md overflow-hidden group relative h-[400px]">
              <!-- Image Section -->
              <div class="h-full w-full transition-transform duration-300 group-hover:scale-90">
                <img
                  src="/work/2.png"
                  alt="Landing Pages"
                  class="w-full h-full object-cover"
                />
              </div>
              <!-- Text Section -->
              <div class="absolute inset-0 bg-black/80 transition-opacity duration-300 opacity-0 group-hover:opacity-100">
                <!-- Always Visible Title -->
                <div class="p-6 text-center">
                  <h2 class="text-2xl font-display text-white">Landing Pages</h2>
                </div>
                <!-- Hidden Description -->
                <div class="p-6 mt-4">
                  <p class="text-gray-300">
                    Design and optimize landing pages to maximize conversions and improve user engagement.
                  </p>
                </div>
              </div>
            </div>
          </li>

          <!-- Add more slides here -->
        </ul>
      </div>
    </section>
  </div>
</section>

<!-- Add JavaScript for Mobile Tap Interaction -->
<script>
  document.addEventListener("DOMContentLoaded", () => {
    const cards = document.querySelectorAll(".group");

    cards.forEach((card) => {
      // Toggle hover state on mobile
      card.addEventListener("click", () => {
        card.classList.toggle("active");
      });

      // Close hover state when tapping outside the card
      document.addEventListener("click", (e) => {
        if (!card.contains(e.target)) {
          card.classList.remove("active");
        }
      });
    });
  });
</script>