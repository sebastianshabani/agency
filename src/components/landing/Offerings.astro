---
// Import the JSON file for Offerings
import offeringsData from '../../data/offeringsData.json';
---

<section class="border-b border-white/20 bg-accent-500">
  <div class="mx-auto max-w-7xl border-white/20 border-x overflow-hidden p-8">
    {/* Flex Container */}
    <div class="flex overflow-x-auto sm:overflow-x-visible gap-6">
      {offeringsData.map((offering, index) => (
        <div key={index} class="flex max-w-full flex-[0_0_auto] flex-col relative w-full grow sm:w-1/4 min-w-[calc(50%-12px)] sm:min-w-0">
          {/* Image Section */}
          <div class="relative w-full h-[300px] sm:h-[400px]">
            <img
              alt={offering.title}
              loading="lazy"
              class="absolute !h-full w-full object-cover object-center"
              srcSet={`${offering.image}?auto=format&fit=max&q=100&w=360 360w, ${offering.image}?auto=format&fit=max&q=100&w=720 720w, ${offering.image}?auto=format&fit=max&q=100&w=1080 1080w, ${offering.image}?auto=format&fit=max&q=100&w=1440 1440w`}
              src={`${offering.image}?auto=format&fit=max&q=100&w=720`}
              width="720"
              height="774"
            />
          </div>

          {/* Title and Description Section */}
          <div class="absolute bottom-0 left-0 right-0 bg-[#F4F3ED] transition-all duration-500 transform translate-y-0 group-hover:-translate-y-full h-1/2 group-hover:h-full">
            {/* Title (Always Visible) */}
            <div class="p-6 text-center">
              <h3 class="font-serif text-xl sm:text-2xl text-[#1E1E1E]">{offering.title}</h3>
            </div>

            {/* Description (Hidden by Default, Revealed on Hover) */}
            <div class="absolute inset-0 bg-[#F4F3ED] p-6 text-center opacity-0 transition-opacity duration-500 group-hover:opacity-100">
              <p class="mt-3 text-gray-700 text-sm sm:text-base leading-6">
                {offering.description}
              </p>
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>