---
// Import the JSON file for Offerings
import offeringsData from '../../data/offeringsData.json';
---

<section class="border-b border-white/20 bg-accent-500">
  <div class="mx-auto max-w-7xl border-white/20 border-x overflow-hidden">
    <div 
      class="splide" 
      x-data="{ 
        init() {
          new Splide(this.$refs.splide, {
            perPage: 3.5, // Show 3.5 offerings by default
            gap: '1rem', // Space between slides
            perMove: 1, // Move 1 slide at a time
            breakpoints: {
              640: {
                perPage: 1.5 // Show 1.5 offerings on mobile
              }
            }
          }).mount();
        }
      }" 
      x-ref="splide" 
      aria-roledescription="carousel"
    >
      <div class="splide__track">
        <ul class="splide__list">
          {offeringsData.map((offering, index) => (
            <li class="splide__slide" key={index}>
              <div class="group relative flex flex-col items-center rounded-lg overflow-hidden bg-gray-800 transition-all duration-500 hover:shadow-lg">
                <div class="relative w-full h-[304px] lg:h-[588px] overflow-hidden">
                  <img
                    src={offering.image}
                    alt={offering.title}
                    class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-105"
                  />
                </div>
                <div class="absolute bottom-0 w-full p-4 bg-black/70 opacity-0 group-hover:opacity-100 transition-opacity duration-500">
                  <h4 class="text-white text-lg lg:text-xl font-bold">{offering.title}</h4>
                  <p class="text-gray-300 text-sm mt-2">{offering.description}</p>
                </div>
              </div>
            </li>
          ))}
        </ul>
      </div>
    </div>
  </div>
</section>
