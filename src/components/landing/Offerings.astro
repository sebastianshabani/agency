---
// Import the JSON file for Offerings
import offeringsData from '../../data/offeringsData.json';
---

<section class="border-b border-white/20 bg-accent-500">
  <div class="mx-auto max-w-7xl border-white/20 border-x overflow-hidden p-8 grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
    {offeringsData.map((offering, index) => (
      <div key={index} class="bg-[#F4F3ED] rounded-lg overflow-hidden shadow-md">
        <!-- Image Section -->
        <div class="relative">
          <img
            src={offering.image}
            alt={offering.title}
            class="w-full h-[300px] object-cover sm:h-[450px]"
          />
          <!-- Overlay Text -->
          <div class="absolute inset-0 flex items-center justify-center text-center text-white bg-black/50 p-4 opacity-0 hover:opacity-100 transition-opacity duration-300">
            <p class="text-lg sm:text-xl font-bold">{offering.overlayText}</p>
          </div>
        </div>

        <!-- Title Section -->
        <div class="p-4">
          <h3 class="text-center font-serif text-xl sm:text-2xl text-[#1E1E1E]">
            {offering.title}
          </h3>
        </div>
      </div>
    ))}
  </div>
</section>
