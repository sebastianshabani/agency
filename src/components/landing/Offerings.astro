---
// Import the JSON file for Offerings
import offeringsData from '../../data/offeringsData.json';
---

<section class="border-b border-white/20 bg-accent-500">
  <div class="mx-auto max-w-7xl border-white/20 border-x overflow-hidden p-8 grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
    {offeringsData.map((offering, index) => (
      <div key={index} class="relative bg-[#F4F3ED] rounded-lg overflow-hidden shadow-md group">
        <!-- Image Section -->
        <div class="relative w-full h-[392px]">
          <img
            src={offering.image}
            alt={offering.title}
            class="w-full h-full object-cover"
          />
        </div>

        <!-- Title and Description Section -->
        <div class="absolute bottom-0 left-0 right-0 bg-[#F4F3ED] transition-transform duration-500 group-hover:-translate-y-full">
          <div class="p-6 text-center">
            <h3 class="font-serif text-xl sm:text-2xl text-[#1E1E1E]">{offering.title}</h3>
            <p class="mt-3 text-gray-700 text-sm sm:text-base leading-6">
              {offering.description}
            </p>
          </div>
        </div>
      </div>
    ))}
  </div>
</section>
