---
// Import the JSON file
import carouselData from '../../data/carouselData.json';
---

<section class="carousel-section service-carousel relative w-full overflow-hidden py-4">
  <div class="mx-auto max-w-7xl">
    <div class="relative">
      <div class="pointer-events-none absolute inset-0 z-10 flex w-full justify-between">
        <div class="w-44 bg-gradient-to-r from-[#1e1e1e] via-transparent to-transparent"></div>
        <div class="w-44 bg-gradient-to-l from-[#1e1e1e] via-transparent to-transparent"></div>
      </div>

      <!-- Marquee Container -->
      <div class="carousel-marquee-container overflow-x-auto scrollbar-hide">
        <div class="flex items-center carousel-image-marquee-animation gap-4 whitespace-nowrap">
          {carouselData.images.map((item) => (
            <div class="carousel-item">
              <img
                src={item.src}
                alt={item.alt}
                class="carousel-image"
              />
              <span class="carousel-text">{item.alt}</span>
            </div>
          ))}
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  /* Carousel-specific styles */
  .carousel-item {
    width: 232px;
    height: 72px;
    display: flex;
    align-items: center;
    justify-content: start;
    border: 1px solid #1e1e1e;
    background-color: #EFF3E4;
    border-radius: 12px;
  }
  .carousel-image {
    width: 80px;
    height: 60px;
    object-fit: cover;
    border-radius: 12px;
  }
  .carousel-text {
    margin-left: 8px;
    font-size: 14px;
    font-weight: 500;
    color: #1e1e1e;
  }
</style>
