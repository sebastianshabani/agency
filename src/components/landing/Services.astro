---
// Import the JSON file for Services
import servicesData from '../../data/servicesData.json';
---

<section class="border-white/20 border-b">
  <div class="mx-auto border-white/20 border-x max-w-7xl">
    <div class="p-8">
      <p class="text-white font-display uppercase text-4xl lg:text-3xl text-center">
        We create ads that drive sales.
      </p>
    </div>

    <div class="text-white text-xs gap-3 gap-y-12 grid grid-cols-1 md:grid-cols-4 mx-auto p-8 sm:grid-cols-2 md:gap-y-0">
      {servicesData.map((service, index) => (
        <div key={index}>
          <div>
            <span class="text-white font-display text-xl">{service.title}</span>
          </div>
          <p class="mt-3 text-eagle">{service.description}</p>
        </div>
      ))}
    </div>

    <!-- Add the button -->
    <div class="text-center p-8">
      <a
        href="#"
        onclick="Calendly.initPopupWidget({url: 'https://calendly.com/hyper-creative/30min?hide_event_type_details=1&hide_gdpr_banner=1'}); return false;"
        class="w-full bg-orange duration-200 font-display hover:bg-black text-white lg:w-auto px-6 py-4 sm:rounded-full text-black hover:text-white text-center text-xs uppercase"
      >
        Book a call
      </a>
    </div>
  </div>
</section>
