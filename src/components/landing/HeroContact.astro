<section class="mx-auto max-w-7xl px-8 py-12">
  <h1 class="text-white font-display uppercase text-3xl lg:text-7xl mb-8">
    Reach out today, let’s create results tomorrow
  </h1>
  <div class="flex flex-col lg:flex-row lg:space-x-12 items-start">
    <!-- Left Column: Text and Image -->
    <div class="lg:w-1/2 mb-8 lg:mb-0">
      <p class="text-lg lg:text-xl font-light text-white">
        Ready to accelerate your digital growth? Add your details and we’ll get back to you.
      </p>
      <!-- Responsive Image -->
      <img 
        src="/images/ads_example.webp" 
        alt="Example Ads" 
        class="mt-6 w-full max-w-md mx-auto lg:mx-0 rounded hidden lg:block">
    </div>

    <!-- Right Column: Form -->
    <form id="contactForm" method="POST" class="lg:w-1/2 max-w-lg p-6 bg-black/80 rounded shadow-lg">
      <div class="mb-4">
        <label for="name" class="block text-white font-bold mb-2">
          Your Name <span class="text-orange">*</span>
        </label>
        <input 
          type="text" 
          id="name" 
          name="name" 
          required 
          class="w-full px-3 py-2 border border-eagle bg-black/50 text-white rounded focus:outline-none focus:ring focus:ring-orange">
      </div>
      <div class="mb-4">
        <label for="email" class="block text-white font-bold mb-2">
          Email <span class="text-orange">*</span>
        </label>
        <input 
          type="email" 
          id="email" 
          name="email" 
          required 
          class="w-full px-3 py-2 border border-eagle bg-black/50 text-white rounded focus:outline-none focus:ring focus:ring-orange">
      </div>
      <div class="mb-4">
        <label for="message" class="block text-white font-bold mb-2">
          What can we do for you? <span class="text-orange">*</span>
        </label>
        <textarea 
          id="message" 
          name="message" 
          required 
          class="w-full px-3 py-2 border border-eagle bg-black/50 text-white rounded focus:outline-none focus:ring focus:ring-orange">
        </textarea>
      </div>
      <div class="mb-4">
        <label class="inline-flex items-center">
          <input 
            type="checkbox" 
            name="privacy" 
            id="privacy" 
            required 
            class="mr-2">
          <span class="text-white">
            I accept the <a href="/privacy-policy" class="text-orange underline hover:text-white">Privacy Policy</a>
          </span>
        </label>
      </div>
      <button 
        type="submit" 
        class="bg-orange text-white px-4 py-2 rounded hover:bg-eagle hover:text-black transition">
        Send Message
      </button>
      <!-- Feedback Message -->
      <div id="form-feedback" class="mt-4 text-white hidden"></div>
    </form>
  </div>

  <!-- JavaScript for Form Handling -->
  <script>
    const form = document.getElementById('contactForm');
    const feedback = document.getElementById('form-feedback');

    form.addEventListener('submit', async (e) => {
      e.preventDefault(); // Prevent default form submission

      feedback.textContent = ''; // Clear previous feedback
      feedback.classList.add('hidden'); // Hide feedback initially

      const formData = new FormData(form);

      try {
        const response = await fetch('https://formspree.io/f/xrbbooky', {
          method: 'POST',
          body: formData,
          headers: {
            Accept: 'application/json',
          },
        });

        if (response.ok) {
          feedback.textContent = 'Thank you for your message! We’ll get back to you shortly.';
          feedback.classList.remove('hidden', 'text-red-500');
          feedback.classList.add('text-green-500');
          form.reset(); // Clear the form after successful submission
        } else {
          throw new Error('Failed to submit the form. Please try again.');
        }
      } catch (error) {
        feedback.textContent = error.message || 'Something went wrong. Please try again.';
        feedback.classList.remove('hidden', 'text-green-500');
        feedback.classList.add('text-red-500');
      }
    });
  </script>
</section>