<!-- HeroContact.astro -->
<section class="mx-auto max-w-7xl px-8 py-12">
  <h1 class="text-white font-display uppercase text-3xl lg:text-7xl">
    Reach out today, let us create results tomorrow.
  </h1>
  <form action="/api/contact" method="POST" class="mt-8 max-w-lg mx-auto p-4 bg-white rounded shadow">
    <div class="mb-4">
      <label for="name" class="block text-gray-700 font-bold mb-2">
        Your Name <span class="text-red-500">*</span>
      </label>
      <input 
        type="text" 
        id="name" 
        name="name" 
        required 
        class="w-full px-3 py-2 border rounded focus:outline-none">
    </div>
    <div class="mb-4">
      <label for="email" class="block text-gray-700 font-bold mb-2">
        Email <span class="text-red-500">*</span>
      </label>
      <input 
        type="email" 
        id="email" 
        name="email" 
        required 
        class="w-full px-3 py-2 border rounded focus:outline-none">
    </div>
    <div class="mb-4">
      <label for="message" class="block text-gray-700 font-bold mb-2">
        What can we do for you? <span class="text-red-500">*</span>
      </label>
      <textarea 
        id="message" 
        name="message" 
        required 
        class="w-full px-3 py-2 border rounded focus:outline-none">
      </textarea>
    </div>
    <div class="mb-4">
      <label class="inline-flex items-center">
        <input 
          type="checkbox" 
          name="privacy" 
          id="privacy" 
          required 
          class="mr-2">
        <span class="text-gray-700">
          I accept the <a href="/privacy-policy" class="text-blue-500 underline hover:text-blue-700">Privacy Policy</a>
        </span>
      </label>
    </div>
    <button 
      type="submit" 
      class="bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600">
      Get in touch
    </button>
  </form>
</section>
