---
// Import the JSON file
import resultsData from '../../data/resultsData.json';
---

<section class="border-white/20 border-b">
  <div class="mx-auto border-white/20 border-x max-w-7xl">
    <!-- Title -->
    <div class="p-8">
      <p class="text-white font-display uppercase text-3xl lg:text-5xl text-center">
        {resultsData.title}
      </p>
    </div>

    <!-- Results Grid -->
    <div class="text-white text-xs gap-3 gap-y-12 grid grid-cols-1 md:grid-cols-4 mx-auto p-8 sm:grid-cols-2 md:gap-y-0">
      {resultsData.results.map((result, index) => (
        <div key={index}>
          <div>
            <span class="text-white font-display text-3xl">{result.value}</span>
          </div>
          <p class="mt-3 text-eagle">{result.description}</p>
        </div>
      ))}
    </div>
  </div>
</section>