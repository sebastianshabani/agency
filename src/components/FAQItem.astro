---
interface Props {
  title: string;
  details: string;
  id: string; // Unique ID for each FAQ item
}

const { title, details, id } = Astro.props;
---

<div class="accordion">
  <input type="checkbox" id={`faq-${id}`} class="accordion-toggle" />
  <label for={`faq-${id}`} class="accordion-button flex items-center justify-between p-4 cursor-pointer">
    {title}
    <svg class="accordion-chevron h-6 w-6 transform transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
    </svg>
  </label>
  <div class="accordion-content overflow-hidden transition-all duration-300 max-h-0">
    <p class="p-4">
      {details}
    </p>
  </div>
</div>

<style>
  .accordion-toggle {
    display: none; /* Hide the checkbox */
  }

  .accordion-button {
    background-color: transparent;
    color: white;
    font-weight: bold;
  }

  .accordion-button:hover {
    background-color: rgba(255, 255, 255, 0.1);
  }

  .accordion-content {
    max-height: 0;
    overflow: hidden;
    transition: max-height 0.3s ease-out;
  }

  .accordion-toggle:checked ~ .accordion-content {
    max-height: 200px; /* Adjust based on your content */
  }

  .accordion-toggle:checked ~ .accordion-button .accordion-chevron {
    transform: rotate(180deg); /* Rotate the chevron when open */
  }
</style>