---
import BaseHead from "@/components/BaseHead.astro"; // Import BaseHead
import Navigation from "@/components/Navigation.astro"; // Import Navigation
import Footer from "@/components/Footer.astro"; // Import Footer

// Define props
const { 
  title = "HYPER - We Create Ads That Drive Sales | Creative Agency", 
  description = "HYPER is a creative agency that creates ads that drive sales. Specializing in high-conversion strategies, innovative design, and measurable results. Part of SOP Group LTD.",
  canonicalUrl = "https://www.yourwebsite.com/",
  ogImage = "https://www.yourwebsite.com/images/og-image.jpg"
} = Astro.props;
---

<html lang="en" class="selection:bg-orange selection:text-white">
  <head>
    <!-- Use BaseHead Component -->
    <BaseHead 
      title={title} 
      description={description} 
      canonicalUrl={canonicalUrl} 
      ogImage={ogImage} 
    />
  </head>
  <body class="mx-auto bg-black 2xl:max-w-7xl">
    <!-- Navigation Component -->
    <Navigation />

    <!-- Main Content Slot -->
    <slot />

    <!-- Footer Component -->
    <Footer />

    <!-- Vercel Speed Insights -->
    <SpeedInsights />
  </body>
</html>